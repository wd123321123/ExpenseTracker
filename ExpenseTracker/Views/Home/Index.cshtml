@{
    ViewData["Title"] = "Strona Główna";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJb4S6r4LhFL3p5qv4RkWSeFfqwS1gfE1X7tL6g5lrx8Rmc++h5ChNC7iv7x" crossorigin="anonymous">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 100px 0;
        }
        .card {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .feature-icon {
            font-size: 3rem;
            color: #2575fc;
        }
    </style>
</head>
<body>

<section class="hero-section text-center">
    <div class="container">
        <h1 class="display-4">Śledź swoje wydatki!</h1>
        <p class="lead">Prosta aplikacja do zarządzania wydatkami w rodzinie.</p>
    </div>
</section>

<section id="about" class="py-5 bg-light">
    <div class="container text-center">
        <h2>O aplikacji</h2>
        <p class="lead">Nasza aplikacja pomoże Ci w prosty sposób zarządzać wydatkami w rodzinie.</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-wallet2"></i>
                        </div>
                        <h5 class="card-title">Śledzenie wydatków</h5>
                        <p class="card-text">Dodawaj transakcje, aby śledzić wydatki.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-bar-chart"></i>
                        </div>
                        <h5 class="card-title">Analiza wydatków</h5>
                        <p class="card-text">Śledź statystyki i analizuj wydatki.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-bar-chart"></i>
                        </div>
                        <h5 class="card-title">Zarządzanie użytkownikami</h5>
                        <p class="card-text">Zarządzaj użytkownikami w wygodny sposób.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<footer class="text-center py-4 bg-light">
    <p>&copy; 2025 Expense tracker - Wszystkie prawa zastrzeżone</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-3gtsFfaWh6MF48mhyy34UgN4GQDrbPyQ3es7tHF8ztnrP8RgD1FpXxFkKhNxHZsm" crossorigin="anonymous"></script>
</body>
</html>